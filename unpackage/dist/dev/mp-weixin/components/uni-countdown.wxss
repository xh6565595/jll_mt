
@charset "UTF-8";
.uni-countdown {
	padding: 2rpx 0;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	-webkit-flex-wrap: nowrap;
	        flex-wrap: nowrap;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	margin: 12rpx 0;
	height: 36rpx;
}
.uni-countdown__splitor {
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	line-height: 32rpx;
	padding: 0 5rpx;
	font-size: 28rpx
}
.uni-countdown__number {
	line-height: 36rpx;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	height: 36rpx;
	width: 36rpx;
	border-radius: 6rpx;
	margin: 0 5rpx;
	font-size: 28rpx;
	border: 1px solid #fff;
	font-size: 24rpx;
	/* padding: 0 5rpx; */
	text-align: center;
	background: #fff;
	color: #fff;
}

